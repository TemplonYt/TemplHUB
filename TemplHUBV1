-- Load Orion library
local OrionLib = loadstring(game:HttpGet('https://raw.githubusercontent.com/shlexware/Orion/main/source'))()

-- Create window
local Window = OrionLib:MakeWindow({
    Name = "Templ Hub",
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = "Templ Hub",
    IntroEnabled = true,
    IntroText = "Welcome to Templ Hub!",
    IntroIcon = "URL_TO_YOUR_INTRO_IMAGE",
    Icon = "URL_TO_YOUR_WINDOW_ICON",
    CloseCallback = function()
        -- Your close callback function here
    end
})

-- Define function to start quests in Blox Fruits
local function StartQuest(questName, questNumber)
    local args = {
        [1] = "StartQuest",
        [2] = questName,
        [3] = questNumber
    }
    game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer(unpack(args))
end

-- Home tab
local Home = Window:MakeTab({
    Name = "üè† Home",
    Icon = nil,
    PremiumOnly = false
})

local Credits = Home:AddSection({
    Name = "Credits"
})

Home:AddLabel("Owner = Templ")
Home:AddLabel("Beta Testers = Beast.44k")

-- Useful tab
local Useful = Window:MakeTab({
    Name = "üî® Useful",
    Icon = nil,
    PremiumOnly = false
})

-- Add Simple Spy button
Useful:AddButton({
    Name = "Simple Spy",
    Callback = function()
        loadstring(game:HttpGet("https://github.com/exxtremestuffs/SimpleSpySource/raw/master/SimpleSpy.lua"))()
        OrionLib:MakeNotification({
            Name = "Opened new GUI",
            Content = "Opened Simple Spy",
            Image = nil,
            Time = 2
        })
    end    
})

-- Add Infinite Yield button
Useful:AddButton({
    Name = "Infinite Yield",
    Callback = function()
        loadstring(game:HttpGet('https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source'))()
        OrionLib:MakeNotification({
            Name = "Opened new GUI",
            Content = "Opened Infinite Yield",
            Image = nil,
            Time = 2
        })
    end    
})

-- Fun tab
local Fun = Window:MakeTab({
    Name = "üéà Fun",
    Icon = nil,
    PremiumOnly = false
})

-- Blox Fruits tab
local BloxFruits = Window:MakeTab({
    Name = "üè¥‚Äç‚ò†Ô∏è Blox Fruits",
    Icon = nil,
    PremiumOnly = false
})

-- Desert section
local Desert = BloxFruits:AddSection({
    Name = "Desert"
})

-- Add buttons to start quests in Desert
for i = 1, 2 do
    Desert:AddButton({
        Name = "Get Quest " .. i,
        Callback = function()
            StartQuest("DesertQuest", i)
        end
    })
end

-- Pirate Village section
local PV = BloxFruits:AddSection({
    Name = "Pirate Village"
})

-- Add buttons to start quests in Pirate Village
for i = 1, 3 do
    PV:AddButton({
        Name = "Get Quest " .. i,
        Callback = function()
            StartQuest("BuggyQuest1", i)
        end
    })
end

-- Sols RNG tab
local SolsRNG = Window:MakeTab({
    Name = "üé∞ Sols RNG",
    Icon = nil,
    PremiumOnly = false
})

-- Speed Games tab
local SpeedGames = Window:MakeTab({
    Name = "üèÉ‚Äç‚ôÄÔ∏è Speed Games",
    Icon = nil,
    PremiumOnly = false
})

-- Add slider for walkspeed adjustment
SpeedGames:AddSlider({
    Name = "Walkspeed",
    Min = 0,
    Max = 950,
    Default = 16,
    Color = Color3.fromRGB(255,255,255),
    Increment = 1,
    ValueName = "Speed",
    Callback = function(Value)
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = Value
    end    
})

-- Initialize the window
OrionLib:Init()
